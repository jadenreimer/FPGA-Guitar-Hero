module scoring(
					input CLOCK_50,
					input reset_n,
					input note_hit,
					input note_miss;
					
					output [6:0]HEX5,
					output [6:0]HEX4,
					output [6:0]HEX3,
					output [6:0]HEX2,
					output [6:0]HEX1,
					output [6:0]HEX0,
					output [19:0] score
					);
					
	reg [4:0]multiplier = 16'd1;
	
	always @(CLOCK_50)
	begin
		if (~reset_n)
		begin
			if (multiplier == 16'd10)
				multiplier <= multiplier;
			else if (note_hit)
				multiplier <= multiplier+1;
			else if (note_miss)
				multiplier <= 16'd1;
		end
		
		else multiplier <= 16'd1;
		
	end
	
	always @(CLOCK_50)
	begin
		if (~reset_n)
		begin
			if (score == 20'd999999)
				score <= score;
				
			else if (note_hit)
				score <= score + multiplier;
		end
		
		else score <= 20'd0;
		
	end
	
endmodule
